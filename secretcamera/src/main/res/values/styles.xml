<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="mainHeaderDarkBackground">
        <item name="android:textColor">@color/light_card</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="fab_add">
        <item name="android:src">@android:drawable/ic_menu_add</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/cardview_dark_background</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="text_area">
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/cardview_light_background</item>
    </style>

</resources>
