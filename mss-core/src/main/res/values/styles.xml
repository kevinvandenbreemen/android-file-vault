<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="ButtonAction" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/light_card</item>
    </style>

    <style name="SquareButton" parent="ButtonStyle"></style>

    <style name="ButtonCancel" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonOK" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/green</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="item_select">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="fileselect_title">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_input" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">12pt</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/cardview_light_background</item>
    </style>

    <style name="error" >
        <item name="android:textColor">@color/red</item>
        <item name="android:labelTextSize">18pt</item>
    </style>

</resources>
